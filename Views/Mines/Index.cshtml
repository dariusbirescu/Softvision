@model WebApplication1.Models.City

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <tr>
        @foreach( var res in this.Model.Resources)
        {
            <td class="res-img @(res.Type)"><img src="~/Content/img/icon-@(res.Type).png"></td>
            <td class="res-value @(res.Type)">@res.Value.ToString("F4")</td>    
            <td class="res-update @(res.Type)">@res.LastUpdate.ToString()</td>
        }
    </tr>

</table>
<table class="mines">
    @foreach (var mine in this.Model.Mines)
    {
        <tr class="@(mine.Type)">
            <td><img src="~/Content/img/icon-@(mine.Type).png"></td>
            <td>@mine.Type</td>
            <td>@mine.Level</td>
            <td><span data-mine-id="@mine.MineId" class="mine-details-btn">Details</span></td>
            <td class="hourProduction" hidden>@mine.GetProductionPerHour()</td>
        </tr>
    }
    <div id="mine-details-container">
        <div class="close-btn">X</div>
        <div class="content"></div>
    </div>
</table>



@section Scripts
{
    <script src="~/Scripts/JavaScript/mines.js"></script>
    <script src="~/Scripts/Date.min.js"></script>
}